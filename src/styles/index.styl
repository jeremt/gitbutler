
@import "sk.styl"

.sk-view
  margin auto
  max-width 960px

.sk-icon.icon-branch
  transform translateY(3px) rotate(-90deg)
  &:before
    content: "\e081"
  &:hover
    transform translateY(3px) rotate(-90deg) scale(1.2)
  &.selected
    color #fff
    transform translateY(3px) rotate(-90deg) scale(1.2)

.gb-file-status
  &:last-child
    margin-bottom 20px

.gb-commit-input
  margin-bottom 20px

.gb-commit

  &.remote
    border border_size solid color_primary
    &:hover
      border border_size solid darken(color_primary, 10)

  &.local
    border border_size solid color_success
    &:hover
      border border_size solid darken(color_success, 10)