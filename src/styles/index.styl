
@import "sk.styl"

.sk-view
  margin auto
  max-width 960px

.sk-icon.icon-branch
  transform translateY(3px) rotate(-90deg)
  &:before
    content: "\e081"
  &:hover
    transform translateY(3px) rotate(-90deg) scale(1.2)
  &.selected
    color #fff
    transform translateY(3px) rotate(-90deg) scale(1.2)

.gb-commit

  &.remote
    border 3px solid #3498db
    &:hover
      border 3px solid darken(#3498db, 10)

  &.local
    border 3px solid #2ecc71
    &:hover
      border 3px solid darken(#2ecc71, 10)